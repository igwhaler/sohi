{
  "name": "@bit/bit.envs.common.compiler-types",
  "version": "0.0.15",
  "homepage": "https://bit.dev/bit/envs/common/compiler-types",
  "main": "dist/compiler-types.js",
  "dependencies": {
    "vinyl": "^2.2.0"
  },
  "devDependencies": {
    "@types/vinyl": "^2.0.3",
    "@types/node": "^12.7.4",
    "@types/mocha": "^5.2.7"
  },
  "peerDependencies": {},
  "license": "SEE LICENSE IN LICENSE",
  "bit": {
    "env": {
      "compiler": {
        "bit.envs/compilers/typescript@3.1.46": {
          "rawConfig": {
            "compilerPath": "typescript/bin/tsc",
            "compilerArguments": [
              "--declaration"
            ],
            "compiledFileTypes": [
              ".ts",
              ".tsx"
            ],
            "configFileName": "tsconfig.json",
            "tsconfig": {
              "compilerOptions": {
                "outDir": "dist",
                "target": "ES2015",
                "sourceMap": false,
                "moduleResolution": "Node",
                "esModuleInterop": true,
                "module": "CommonJS",
                "allowSyntheticDefaultImports": true,
                "resolveJsonModule": true,
                "declaration": true,
                "experimentalDecorators": true,
                "inlineSourceMap": false,
                "inlineSources": false,
                "jsx": "react",
                "rootDir": "./",
                "removeComments": true,
                "typeRoots": [
                  "./node_modules/@types"
                ],
                "importHelpers": false,
                "skipLibCheck": true
              },
              "include": [
                "./**/*"
              ],
              "exclude": [
                "node_modules",
                "dist",
                ".dependencies",
                "*.spec.ts",
                "*.e2e.ts"
              ]
            },
            "development": false,
            "copyPolicy": {
              "ignorePatterns": [
                "package.json",
                "package-lock.json",
                "tsconfig.json"
              ],
              "disable": false
            }
          },
          "options": {},
          "files": {}
        }
      }
    },
    "overrides": {
      "devDependencies": {
        "@types/node": "+",
        "@types/mocha": "^5.2.7"
      }
    }
  }
}
