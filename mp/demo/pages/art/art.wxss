/*文章详情页*/
@import '../../towxml/style/main.wxss';
@import '../../towxml/style/theme/light.wxss';
@import '../../towxml/style/theme/dark.wxss';


.art{
  padding: 20rpx 30rpx;
}

.art .title {
  display: block;
  margin-bottom: 6px;
  font-size: 20px;
  color: #878787;
}

.art .content {
  line-height: 1.5em;
  font-size: 16px;
  color: #333;
}

.art .image {
  display: block;
  margin-top: 10rpx;
  width: 100%;
}

.art .time {
  margin-top: 10rpx;
  font-size: 14px;
  color: #878787;
}