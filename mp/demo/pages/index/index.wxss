/*header*/
.user-info {
  display: flex;
  display: none;
  justify-content: center;
}

.userinfo-avatar {
  width: 96rpx;
  height: 96rpx;
}

.wrap-userinfo {
  margin-left: 30rpx;
  display: flex;
  flex-direction: column;
  align-content: space-around;
}

.userinfo-name {
  font-size: 16px;
  color: #333;
}

.userinfo-des {
  margin-top: 16rpx;
  font-size: 12px;
  color: #9d9d9d;
}

/*文章列表*/
.art-list {
  margin: 40rpx 20rpx 0;
}

.art-item {
  /*border-top: 1px solid #e9e9e9;*/
  padding-bottom: 30rpx;
}

.art-item .introduce {
  padding: 20rpx 30rpx;
  box-shadow: 0 0 2px 2px #e9e9e9;
  border-radius: 2px;
}

.art-item .title {
  display: block;
  margin-bottom: 6px;
  font-size: 20px;
  color: #878787;
}

.art-item .content {
  line-height: 1.5em;
  font-size: 16px;
  color: #333;
}

.art-item .image {
  display: block;
  margin-top: 10rpx;
  width: 100%;
}

.art-item .time {
  margin-top: 10rpx;
  font-size: 14px;
  color: #878787;
}
